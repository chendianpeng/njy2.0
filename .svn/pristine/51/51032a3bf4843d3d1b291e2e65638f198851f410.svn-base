/*进度条*/
.nav-arrow {
    width: 1185px;
    height: 40px;
    background: #ccc;
    margin-bottom: 12px;
    color: #fff;
    font-size:14px;


}

.nav-arrow-item:after,
.nav-arrow-item:before {
    content: "";
    display: inline-block;
    width: 0;
    height: 0;
    border-top: 20px solid transparent;
    border-bottom: 20px solid transparent;
    border-left: 20px solid #ccc;
    position: absolute;
    right: -5px;
    top: 0;
    margin-right: -15px;
    z-index: 4;
}

.nav-arrow-item:before {
    border-top: 30px solid transparent;
    border-bottom: 30px solid transparent;
    border-left: 30px solid #fff;
    top: -11px;
    margin-right: -26px;
    z-index: 3;
}

.nav-arrow-item {
    width: 395px;
    line-height: 40px;
    float: left;
    text-align: center;
    position: relative;

}

.nav-arrow-item.on {
    background: #2e99cd;
}

.nav-arrow-item.on:after {
    border-left-color: #2e99cd;
}

.nav-arrow-item:last-child:before {
    border-left-color: transparent;
}



