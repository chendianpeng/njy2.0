/*head*/
@charset "utf-8";
.header_bg{
	background-color: #eee;
    color: #bbbbbb;
    font-size: 12px;
    height:35px;
    line-height: 35px;
}
.black{
	background-color:#424242;
}
.header{
	width: 1200px;
    margin: 0 auto;
}
.header .njy{
    position: relative;
	float: left;
}
.header .njy span{
    color: #666;
}
#njy{
	width: 75px;
	padding: 0 15px;
	height: 35px;
	line-height: 35px;
	display: inline-block;
}
.header .header_menu .hoverNjy{
	background:#fff;
	border:1px solid #eee;
	border-bottom:none;
}
.njy .njyList{
    position: absolute;
    background: #fff;
    border: 1px solid #eee;
	border-top:none;
    top: 33px;
	left:0;
	display: none;
}
.njy .njyList a,
.njy .njyList strong{
    display:block;
    height: 30px;
    width: 75px;
    line-height: 30px;
    padding: 0 15px !important;
    color: #666;
}
.njy .down{
    background: url('../img/arrow_down.png') no-repeat;
    width: 10px;
    height: 10px;
    display: inline-block;
    vertical-align: text-bottom;
    margin-left: 5px;
}
.header .header_menu{
    float: right;
	height:35px;
	line-height:35px;
}
.header .header_menu span{
    color: #999;
}

.header .header_menu a{
    padding:0 5px;
    color: #bbbbbb;
}
.header .header_menu .qrBox{
	display:inline-block;
	position:relative;
}
.header .header_menu .qrBox .icon{
	vertical-align: middle;
    padding-left: 10px;
    cursor: pointer;
}
.header .header_menu .qrBox .qrcode{
	display:none;
	position:absolute;
	padding-top:22px;
	top:0px;
	right:-38px;
	cursor:pointer;
    z-index: 11;
}
.header .header_menu .qrBox .qrcode:hover,
.header .header_menu .qrBox:hover .qrcode{
	display:block;
}

.header .menu{
    float: right;
}
.header span{
    color: #999;
}
.header form{
    display: inline-block;
}
.header .menu a{
    padding:0 5px;
    color: #666;
}
.header .menu img{
    vertical-align: middle;
    padding-left: 10px;
    cursor: pointer;
    width: 16px;
    height: 14px;
    margin-top: 10px;
}
/*menu*/
@charset "utf-8";
.menu_bg{
    background-color: #fff;
    border-bottom: 1px solid #eee;

}
.menu {

}

.menu .logo{
    height: 90px;
    display: inline-block;
}

.menu .logo a{
    margin-top: 15px;
    display: inline-block;
}
.menu .logo span{
    color: #333;
}

.menu .select_btn{
    width: 100px;
    border: 1px solid #F1F1F1;
    background-color: #F1F1F1;
    height: 36px;
    text-align: center;
    font-size: 14px;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 20px;
}
.menu .select_btn:hover{
    cursor: pointer;
    border: 1px solid #dedede;
    background-color: #ededed;
}
.menu .platformName{
    border-left: 1px solid #ddd;
    padding:10px 0px 10px 20px;
    font-size: 24px;
}
.menu .arrow_down{
    margin-left: 6px;
}
.menu .search{
    float: left;
}
.menu_list{
    background-color: #589bf6;
    font-size: 16px;
    height: 45px;
    line-height: 45px;
    font-size: 0;
}
.menu_list a{
    color:#fff;
    display: inline-block;
    padding: 0px 25px;
    font-size: 16px;
}
.menu_list a:hover{
    background: #538aef !important;
    color:#fff !important;
}
.menu_list a:visited{
    color:#fff;
}
.menu_list .select{
    background-color: #427eeb;
}
.menu .search{
    margin-top: 25px;
    float: right;
}
.menu .search_box{
    height:40px;
    width:430px;
    background-color: #fff;
    border:1px solid #0984c0;
}

.menu .search_btn{
	background-color: #2c99cd;
    color: #fff;
    word-spacing: 2em;
    font-size: 14px;
    width: 90px;
    height: 40px;
    border: none;
    display: inline-block;
    line-height: 40px;
    text-align: center;
    float: right;
}
.menu .search_btn:hover{
    color: #fff !important;
}
.menu .search_box .input{
    border: none;
    width: 340px;
    height: 40px;
	line-height: 40px;
    padding: 0;
    outline: none;
    text-indent: 1em;
}
.menu .select{
	background: #427eeb;
	color: #fff;
}
.nav_list{
	background-color: #f5f5f5;
    font-size:16px;
	margin-top:5px;
    height: 50px;
    line-height: 45px;
    color:#666;
    border-bottom: 1px solid #e5e5e5;
}
.noBg_nav_list{
    font-size:16px;
	margin-top:5px;
    height: 50px;
    line-height: 45px;
    color:#666;
}
.nav_list a,
.noBg_nav_list a{
    color:#666;
    display: inline-block;
}
.nav_list .arrow,
.noBg_nav_list .arrow{
	font-family:"宋体";
	margin-left:6px;
	width: 20px;
    text-align: center;
    display: inline-block;
}
.nav_list a:hover,
.noBg_nav_list a:hover{
    color:#2c99cd !important;
}
.nav_list .select,
.noBg_nav_list .select{
    color:#2c99cd;
}
