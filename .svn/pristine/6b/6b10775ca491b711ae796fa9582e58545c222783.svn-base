/*运费*/
.order-mian-spxx > .spxx-list .yf {
    text-align: right;
    padding: 0px 0px 19px 0px;
    font-size:12px;
}
.order-mian-spxx > .spxx-list .yf>strong{
    color: #333;
}
/*应付*/
.order-mian-spxx > .spxx-list .yf2{
    text-align: right;
    padding: 0px 0px 20px 0px;
    font-size:12px;
}
.order-mian-spxx > .spxx-list .yf2>strong{
    font-size:14px;
    color: #ff0000;
}
.order-mian-spxx > .spxx-list .yf2>i{
    font-size:16px;
}

/*确认付款*/
.order-main .qrfk{
    text-align: right;
    margin-top: 20px;

}
.order-main .qrfk>button{
    width: 150px;
    height: 45px;
    line-height: 45px;
    border: none;
    background-color: #ec1818;
    color: #FFFFFF;
    font-weight: bolder;
    border-radius: 2px;
    font-size: 20px;
}

