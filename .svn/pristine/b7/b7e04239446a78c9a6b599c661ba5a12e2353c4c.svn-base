.content{
    min-height: 880px;
    width: 100%;
    height: 100%;
}
.p18px{
    padding-left: 18px;
    box-sizing: border-box;
}
.p50px{
    padding-left: 50px;
    box-sizing: border-box;
}
/*左边内容*/
.content-l{
    width: 205px;
    min-height: 880px;
    height: 100%;
    background-color: #f1f1f1;
    float: left;
    border-top:1px solid #cccccc;
    border-bottom:1px solid #cccccc;
    border-left:1px solid #cccccc;
}
.njygl{
    width: 100%;
    height: 55px;
    border-bottom: 1px solid #ccc;
    box-sizing: border-box;
    line-height:53px;
    font-weight: bolder;

}
/*供应管理*/
.gygl{
    height: 55px;
    line-height: 50px;
    border-bottom: 1px solid #ccc;
    position: relative;

}
.imgs{
    position: absolute;
    top: 15px;
    left:18px;

}
.gy li{
    line-height: 50px;
}
.gy>li>a,.ywygl li a,.cggl li a{
    color: #7d7d7d;
}

/*采购管理*/
.cggl{
    border-bottom: 1px solid #ccc;
    border-top: 1px solid #ccc;
    background-color: #fff;
    border-left: 4px solid #2c99cd;
}
.cggl li{
    line-height: 49px;


}
.cggl>li>a.cura{
    color: #2c99cd;
}


